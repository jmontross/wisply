<%- model_class = Assignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @assignment.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @assignment.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:educationalUse) %>:</strong></dt>
  <dd><%= @assignment.educationalUse %></dd>
  <dt><strong><%= model_class.human_attribute_name(:intendedEndUserRole) %>:</strong></dt>
  <dd><%= @assignment.intendedEndUserRole %></dd>
  <dt><strong><%= model_class.human_attribute_name(:timeRequired) %>:</strong></dt>
  <dd><%= @assignment.timeRequired %></dd>
  <dt><strong><%= model_class.human_attribute_name(:typicalAgeRange) %>:</strong></dt>
  <dd><%= @assignment.typicalAgeRange %></dd>
  <dt><strong><%= model_class.human_attribute_name(:interactivityType) %>:</strong></dt>
  <dd><%= @assignment.interactivityType %></dd>
  <dt><strong><%= model_class.human_attribute_name(:learningResourceType) %>:</strong></dt>
  <dd><%= @assignment.learningResourceType %></dd>
  <dt><strong><%= model_class.human_attribute_name(:commonCore) %>:</strong></dt>
  <dd><%= @assignment.commonCore %></dd>
  <dt><strong><%= model_class.human_attribute_name(:useRightsUrl) %>:</strong></dt>
  <dd><%= @assignment.useRightsUrl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:isBasedOnUrl) %>:</strong></dt>
  <dd><%= @assignment.isBasedOnUrl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @assignment.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:author) %>:</strong></dt>
  <dd><%= @assignment.author %></dd>
  <dt><strong><%= model_class.human_attribute_name(:publisherId) %>:</strong></dt>
  <dd><%= @assignment.publisherId %></dd>
  <dt><strong><%= model_class.human_attribute_name(:inLanguage) %>:</strong></dt>
  <dd><%= @assignment.inLanguage %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              assignments_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assignment_path(@assignment), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assignment_path(@assignment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
